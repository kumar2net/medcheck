{
  "name": "drugreco-mvp",
  "version": "1.0.0",
  "private": true,
  "description": "DrugReco MVP - Drug Recommendation and Family Management App",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/drugreco-mvp.git"
  },
  "keywords": ["drug-recommendation", "family-health", "medication-management", "mvp"],
  "author": "Your Name",
  "license": "MIT"
}
