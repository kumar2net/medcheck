{
  "name": "drug-suggestion-app-root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production node server/index.js",
    "start:prod": "NODE_ENV=production node server/index.js",
    "dev": "NODE_ENV=development node index.js",
    "build": "npm run build:client && npm run build:functions",
    "build:client": "npm install --prefix client && npm run build --prefix client",
    "build:functions": "npm install --prefix netlify/functions && npx prisma generate --schema=server/prisma/schema.prisma",
    "install:all": "npm install && npm install --prefix client",
    "postinstall": "prisma generate --schema=server/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.2",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "prisma": "^6.11.1"
  },
  "engines": {
    "node": "18.x"
  }
}
